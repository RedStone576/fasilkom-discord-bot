{
    "compilerOptions": {
        "allowJs": true,
        "target": "es2022",
        "module": "commonjs",
        "esModuleInterop": true,
        "rootDir": "./src/",
        "outDir": "./out/",
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "removeComments": true,
        "noEmit": true
    },

    "exclude": [
        "./demo/", 
        "./out/", 
        "./dist/"
    ]
}
